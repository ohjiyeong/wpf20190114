<Window x:Class="helloworld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:helloworld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="39" Margin="257,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" Grid.ColumnSpan="3"/>
        <Button x:Name="btnhello" Content="확인" HorizontalAlignment="Left" Height="39" Margin="612,138,0,0" VerticalAlignment="Top" Width="78" Click="btnhello_Click" Grid.ColumnSpan="3"/>
        <Label Content="이름을 입력하세요" HorizontalAlignment="Left" Height="39" Margin="60,138,0,0" VerticalAlignment="Top" Width="173" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
